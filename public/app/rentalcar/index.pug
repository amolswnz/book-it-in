include /template/header

body(ng-app='rentalcarApp', class='stretched', md-theme='vrTheme')
  //- Main navigation menu
  include /template/navigation

  //- The main content which will be exetended in each file
  section(id="page-title", class="page-title-dark")
    div(class="container clearfix")
      h1 Book Rental Car 
      span Make a booking with us
      ol(class="breadcrumb")
        li: a(href="#") <i class="fa fa-home"></i> Home
        li(class='active') Rental Car Bookings 

  //- Actual page content
  section(id="content")
    div(class="content-wrap")
      div(class="container clearfix")
        div(ng-view)

  //- Footer content
  include /template/footer

  //- All the required script files
  include /template/scripts
  //- Add here additional script files for the app specific files
  script(src="/app/rentalcarApp.js", type='text/javascript')
  script(src="/app/rentalcar/rentalcar.ctrl.js", type='text/javascript')
