include /template/header

body(ng-app='tourApp', class='stretched', md-theme='vrTheme')
  //- Main navigation menu
  include /template/navigation

  //- The main content which will be exetended in each file
  section(id="page-title", class="page-title-dark")
    div(class="container clearfix")
      h1 Book Tour 
      span Make a booking with us
      ol(class="breadcrumb")
        li: a(href="#") <i class="fa fa-home"></i> Home
        li(class='active') Tour Bookings 

  //- Actual page content
  section(id="content")
    div(class="content-wrap")
      div(class="container clearfix")
        div(ng-view)

  //- Footer content
  include /template/footer

  //- All the required script files
  include /template/scripts
  //- Add here additional script files for the app specific files
  script(src="/app/tourApp.js", type='text/javascript')
  script(src="/app/tour/tour.ctrl.js", type='text/javascript')
