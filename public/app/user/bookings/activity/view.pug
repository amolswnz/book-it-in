h3 Your Activity Bookings
div(ng-if="vm.bookings.length < 1")
  .style-msg.style-msg-light(style='background-color: #333;')
    .sb-msg
      i.icon-question-sign
      strong You have NOT made any bookings with us.

//- div(ng-repeat='booking in vm.bookings') {{  booking }}
div.row
  div.col-md-4(ng-repeat-start='booking in vm.bookings')
    div(class='promo promo-border promo-mini text-center')
      p {{ booking.activityDetail[0].details }}
        br
        strong {{ booking.activityDetail[0].city }}
      //- .debug {{ booking.activity._id }}
      p.nobottommargin {{ booking.activity.adult }} Adult &amp; {{ booking.activity.child }} child
        br
        strong Total {{ booking.activity.totalAdultCost +  booking.activity.totalChildCost  | currency }}
        br
        strong Date {{ booking.activity.dateBooked | date: 'mediumDate'}}
      div.text-center
        a(class='button button-3d button-mini button-rounded button-brown', ng-href='#/activity/update/{{ booking.activity._id }}')
          i.fa.fa-edit
          span Update
        | &nbsp;
        a(class='button button-3d button-mini button-rounded button-red', ng-href='#/activity/cancel/{{ booking.activity._id }}')
          i.fa.fa-remove
          span Cancel
  div.divider(ng-if="($index+1)%3==0")
  div(ng-repeat-end="")
