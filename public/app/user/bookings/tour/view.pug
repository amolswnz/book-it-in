h3 Your Tour Bookings
div(ng-if="vm.bookings.length < 1")
  .style-msg.style-msg-light(style='background-color: #333;')
    .sb-msg
      i.icon-question-sign
      strong You have NOT made any bookings with us.

//- div(ng-repeat='booking in vm.bookings') {{  booking }}
div.row
  div.col-md-4(ng-repeat-start='booking in vm.bookings')
    div(class='promo promo-border promo-mini text-center')
      p {{ booking.tourDetail[0].details }}
      p.nobottommargin {{ booking.tour.adult }} Adult &amp; {{ booking.tour.child }} child
        br
        strong Total {{ booking.tour.totalAdultCost +  booking.tour.totalChildCost  | currency }}
        br
        strong Date {{ booking.tour.dateBooked | date: 'mediumDate'}}
      div.text-center
        a(class='button button-3d button-mini button-rounded button-brown', ng-href='#/tour/update/{{ booking.tour._id }}')
          i.fa.fa-edit
          span Update
        | &nbsp;
        a(class='button button-3d button-mini button-rounded button-red', ng-href='#/tour/cancel/{{ booking.tour._id }}')
          i.fa.fa-remove
          span Cancel
  div.divider(ng-if="($index+1)%3==0")
  div(ng-repeat-end="")
