extends /template/layout
block variables
  - var appName = 'profileApp'
  - var isLoggedInActive = 'current'
  - var isProfileActive = 'current'

block main-content
  //- The main content which will be exetended in each file
  section(id="page-title", class="page-title-dark")
    div(class="container clearfix")
      h1 Welcome 
      span Manage your profile here
      ol(class="breadcrumb")
        li: a(href="#") <i class="fa fa-home"></i> Home
        li(class='active') Login - Register

  //- Actual page content
  section(id="content")
    div(class="content-wrap")
      div(class="container clearfix")
        div(ng-view)

block additional-scripts
  script(src="/app/user/profile/profileApp.js", type='text/javascript')
  script(src="/app/user/profile/profile.ctrl.js", type='text/javascript')
