extends /template/layout
block variables
  - var appName = 'xUiApp'
  - var isBookingActive = 'current'
  - var isaActivityActive = 'current'

block main-content
  //- The main content which will be exetended in each file
  section(id="page-title", class="page-title-dark")
    div(class="container clearfix")
      h1 Book Activity 
      span Make a booking with us
      ol(class="breadcrumb")
        li: a(href="#") <i class="fa fa-home"></i> Home
        li(class='active') Activity Bookings 

  //- Actual page content
  section(id="content")
    div(class="content-wrap")
      div(class="container clearfix")
        {{ txt }}

block additional-scripts
  script(src="/app/xUiApp.js", type='text/javascript')
  script(src="/app/xui/xui.ctrl.js", type='text/javascript')
